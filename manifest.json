{
    "manifest_version": 2,
    "name": "Simple Pomodoro Timer",
    "version": "1.0",
    "description": "A basic Pomodoro timer to boost productivity",
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "permissions": ["storage"],
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }